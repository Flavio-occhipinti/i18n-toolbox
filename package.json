{
	"name": "i18n-toolbox",
	"displayName": "I18n Toolbox",
	"description": "Extension vs code which allows to be more productive with i18n",
	"icon": "ressources/extension-icon.png",
	"publisher": "i18n-toolbox",
	"version": "0.3.1",
	"author": {
		"name": "Flavio Occhipinti",
		"email": "flavio.occhipinti.96@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Flavio-occhipinti/i18n-toolbox.git"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.openLangKey",
		"workspaceContains:*.i18n.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"package-explorer": [
				{
					"id": "translator",
					"name": "translator"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "ressources/testicon.png",
					"id": "package-explorer",
					"title": "Translator"
				}
			]
		},
		"commands": [
			{
				"command": "extension.openLangKey",
				"title": "Open lang"
			},
			{
				"command": "extension.addChild",
				"title": "Add child",
				"icon": "ressources/plus.png"
			},
			{
				"command": "extension.rename",
				"title": "Rename",
				"icon": "ressources/pencil.png"
			},
			{
				"command": "extension.refresh",
				"title": "refresh",
				"icon": "ressources/sync.png"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.refresh"
				}
			],
			"view/item/context": [
				{
					"command": "extension.addChild",
					"group": "inline",
					"when": "viewItem == folder"
				},
				{
					"command": "extension.rename",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "extension.refresh",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"js-sha256": "^0.9.0",
		"jsonc-parser": "^2.1.0"
	}
}
